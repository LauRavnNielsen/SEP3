<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Dining with strangers</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="searchevents">
                        <span class="oi oi-magnifying-glass" aria-hidden="true"></span> Search Events
                    </NavLink>
                </li>
               
   
         <AuthorizeView Policy="MustBeLoggedIn">
            <Authorized >
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="createevent">
                        <span class="oi oi-plus" aria-hidden="true"></span> Create Event
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Policy="MustBeLoggedIn">
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="history">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> History
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Policy="MustBeLoggedIn">
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="accountsettings">
                        <span class="oi oi-person" aria-hidden="true"></span> Account settings
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
    </ul>
</div>

@code {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}




